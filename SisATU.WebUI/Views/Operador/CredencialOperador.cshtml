@model SisATU.Base.ViewModel.ExpedienteVM

<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/4.0.0/css/jasny-bootstrap.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/4.0.0/js/jasny-bootstrap.min.js"></script>

<style>
    .fileinput {
        text-align: center !important;
    }

    .btn-file {
        border: 1px solid #dedede !important;
    }
</style>

<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5 style="color:#1ab394">Registro de Operador : Datos personales</h5>

            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li>
                        <a href="#" class="dropdown-item">Config option 1</a>
                    </li>
                    <li>
                        <a href="#" class="dropdown-item">Config option 2</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no-padding">
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10 no-padding">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no-padding">
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                <div id="divTipoDocumento" class="divTipoDocumento form-group">
                                    @Html.DropDownList("ID_TIPO_DOCUMENTO_OPERADOR", Model.SelectTipoDocumento, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input class="form-control" onkeyup="keyUpDNI(event);" onkeypress=" return soloNumeros(event)" id="nroDocumentoOperador" placeholder="Nro. Documento" />
                                        <div class="input-group-btn">
                                            <button type="button" id="btnConsultarReniecOper" onclick="consultarDocumentoOperador();" class="btn btn-primary ladda-button" data-style="zoom-in" title="Consultar Reniec">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-address-book"></i>
                                        </span>
                                        <input class="form-control" id="apePatOperador" placeholder="Apellido Paterno" readonly="readonly" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-address-book"></i>
                                        </span>
                                        <input class="form-control" id="apeMatOperador" placeholder="Apellido Materno" readonly="readonly" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-address-book"></i>
                                        </span>
                                        <input class="form-control" id="nombresOperador" placeholder="Nombres" readonly="readonly" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no-padding">

                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar"></i>

                                        </span>
                                        <input class="form-control" id="txtFechanacimientoOperador" placeholder="Fecha Nacimiento" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                <div class="form-group">
                                    <select id="selectSexoOperador" class="form-control" data-val="true">
                                        <option selected="selected" value="0">.:Sexo:.</option>
                                        <option value="1">Masculino</option>
                                        <option value="2">Femenino</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-map-marker"></i>
                                        </span>
                                        <input class="form-control" id="direccionRENIECOperador" placeholder="Domicio RENIEC" readonly="readonly" />

                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
                                <div class="form-group">
                                    <div class="checkbox i-checks">
                                        <label style="padding-left:0px !important">
                                            <input id="chckActualDomicilio" class="i-checks" type="checkbox" />
                                            Actual
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-map-marker"></i>
                                        </span>
                                        <input class="form-control" id="direccionActualOperador" placeholder="Domicio Actual" />
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no-padding">
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-phone"></i>
                                        </span>
                                        <input class="form-control" id="txtTelefonoCelularOper" onkeypress="return soloNumeros(event)" placeholder="Teléfono Celular" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-phone"></i>
                                        </span>
                                        <input class="form-control" id="txtTelefonoCasaOperador" onkeypress="return soloNumeros(event)" placeholder="Teléfono Casa" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-envelope"></i>
                                        </span>
                                        <input class="form-control" id="txtEmail" onkeypress="return soloNumeros(event)" placeholder="E-mail" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 no-padding">
                        <div style="width:200px;">
                            <img id="fotoPreviewOperador" src="https://dummyimage.com/200x200/b8b8b8/fff.png" style="width:100%;height: 200px;line-height: 1.42857143; background-color: #fff; border: 1px solid #ddd; border-radius: 4px; "accept="image/gif, image/jpeg, image/png"  />
                        </div>
                        <div class="fileinput fileinput-new" data-provides="fileinput" style="display:none !important;">
                            <div class="fileinput-preview img-thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;"></div>
                            <div>
                                <span class="btn btn-outline-secondary btn-file">
                                    <span class="fileinput-new">Select image</span>
                                    <span class="fileinput-exists">Change</span>
                                    <input type="file" name="...">
                                </span>
                                <a href="#" class="btn btn-outline-secondary fileinput-exists" data-dismiss="fileinput">Remove</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

